<odoo>
    <record id='nsp_groups_view_list' model='ir.ui.view'>
        <field name='name'>res.groups.view.list</field>
        <field name='model'>res.groups</field>
        <field name='arch' type='xml'>
            <list string='Groups View' create='0' delete='0' multi_edit="1" open_form_view='1'>
                <field name='full_name'/>
                <field name='category_id'/>
                <field name='create_date'/>
            </list>
        </field>
    </record>

    <record id='nsp_groups_view_form' model='ir.ui.view'>
        <field name='name'>res.groups.view.form</field>
        <field name='model'>res.groups</field>
        <field name='inherit_id' ref='base.view_groups_form'/>
        <field name='priority'>100</field>
        <field name='arch' type='xml'>
            <xpath expr='//form' position='replace'>
                <form string='Group Form' create='0' delete='0'>
                    <header position='inside'>
                    </header>
                    <sheet>
                        <div class='group_title'>
                            <label for='name'/>
                            <h1>
                                <field name='name' required='1'/>
                            </h1>
                        </div>
                        <group>
                            <field name='users'/>
                            <field name='menu_access'/>
                            <field name='view_access'/>
                        </group>
                    </sheet>
                </form>
            </xpath>
        </field>
    </record>
    <record id='nsp_groups_action' model='ir.actions.act_window'>
        <field name='name'>Groups</field>
        <field name='res_model'>res.groups</field>
        <field name='view_mode'>list,form</field>
        <field name='view_id' ref='nsp_groups_view_list'></field>
        <field name="domain" eval="[( 'category_id', '=', ref('non_stop_parking.module_category_nsp') )]"/>
    </record>
</odoo>