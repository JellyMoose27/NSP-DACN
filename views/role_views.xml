<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="nsp_role_action" model="ir.actions.act_window">
        <field name="name">Quyền truy cập</field>
        <field name="res_model">nsp.role</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="nsp_role_form_view" model="ir.ui.view">
        <field name="name">nsp.role.form.view</field>
        <field name="model">nsp.role</field>
        <field name="arch" type="xml">
            <form string="Quyền truy cập">
                <group>
                    <field name="name"/>
                    <field name='group_ids' widget='many2many_tags' domain="[('category_id', '=', 'Non-stop Parking')]"/>
                </group>
            </form>
        </field>
    </record>

    <record id="nsp_role_list_view" model="ir.ui.view">
        <field name="name">nsp.role.list.view</field>
        <field name="model">nsp.role</field>
        <field name="arch" type="xml">
            <list string="Danh sách quyền truy cập">
                <field name="name"/>
                <field name="group_ids"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>
</odoo>