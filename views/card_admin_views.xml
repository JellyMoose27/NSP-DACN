<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="nsp_card_admin_action" model='ir.actions.act_window'>
        <field name='name'>Tạo thẻ</field>
        <field name='res_model'>nsp.card</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="nsp_card_admin_list_view" model="ir.ui.view">
        <field name='name'>nsp.card.admin.list.view</field>
        <field name='model'>nsp.card</field>
        <field name='arch' type='xml'>
            <list string="Danh sách các thẻ được cấp">
                <field name='card_id'/>
                <field name="card_type"/>
                <field name='create_date'/>
            </list>
        </field>
    </record>

    <record id="nsp_card_admin_form_view" model="ir.ui.view">
        <field name='name'>nsp.card.admin.form.view</field>
        <field name='model'>nsp.card</field>
        <field name='arch' type='xml'>
            <form string="Tạo thẻ">
                <sheet>
                    <group>
                        <field name="card_id" style="font-size: 1.2rem;"/>
                        <field name="card_type" widget="badge"/>
                    </group>
                    <!-- <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div> -->
                </sheet>
            </form>
        </field>
    </record>
</odoo>